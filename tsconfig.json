{
  "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "types": [
          "@types/jest",
          "jest-playwright-preset",
          "expect-playwright",
      ],
      "typeRoots": [
          "./tests/types.d.ts",
          "node_modules/@types"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "inlineSourceMap": true
  },
}